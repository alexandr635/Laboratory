<Window x:Class="Laboratory.Windows.LaborantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory.Windows"
        mc:Ignorable="d"
        Title="Laborant" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="../Resources/logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="206*"></RowDefinition>
            <RowDefinition Height="213*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid x:Name="laborantGrid">
            <Image Margin="25,24,581,48" Name="laborantImg"></Image>
        </Grid>

        <Label Name="timerLbl" Margin="593,32,0,0" Width="162"></Label>
        <Button x:Name="addPatientBtn" Content="Добавить пациента" Grid.Row="1" Margin="30,34,0,0" Width="259" Click="AddPatientBtn_Click"></Button>
        <Button x:Name="backBtn" Content="Назад" Grid.Row="1" Margin="30,115,0,0" Width="259" Click="BackBtn_Click"></Button>
        <Button Name="newOrderBtn" Content="Новый заказ" Margin="399,34,0,0" Width="259" Grid.Row="1" Click="NewOrderBtn_Click"></Button>
    </Grid>
</Window>
